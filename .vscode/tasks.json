{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Zap.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/Zap.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/Zap.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "(re)start-server",
			"type": "shell",
			"command": "zsh",
			"args": [
				"-lc",
				"pkill -f 'Zap' || true; sleep 0.1; dotnet run --project ${workspaceFolder}/Zap.csproj"
			],
			"presentation": {
				"reveal": "silent",
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": []
		}
	]
}